# Production Environment Template
# Copy this to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# Redis/Valkey Configuration
REDIS_HOST=your_valkey_endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_TLS=true
REDIS_PASSWORD=your_redis_password_here

# Anthropic AI
ANTHROPIC_API_KEY=your_anthropic_key_here

# Algolia Search (if using)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key

# Cognito Configuration (if using)
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=your_user_pool_id
AWS_COGNITO_CLIENT_ID=your_client_id
AWS_COGNITO_DOMAIN=your_cognito_domain
AUTH_REDIRECT_URI=https://your-domain.com/auth/callback
AUTH_LOGOUT_REDIRECT_URI=https://your-domain.com/

# Application Settings
PORT=5001

# Logging Configuration (Production)
# These settings reduce log verbosity in production
LOG_LEVEL=error
DEBUG=false

# Performance Settings
MAX_FILE_SIZE=100mb
CACHE_TTL=3600
MAX_MEMORY_RESTART=2G
